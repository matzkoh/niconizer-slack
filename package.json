{
  "name": "niconizer-slack",
  "version": "0.0.0-development",
  "description": "CLI that watch slack messages and send to niconizer.",
  "keywords": [
    "comment",
    "niconizer",
    "slack"
  ],
  "repository": "github:matzkoh/niconizer-slack",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./dist/lib/*.js"
  },
  "bin": {
    "niconizer-slack": "./dist/bin/index.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "dev": "tsx --env-file=.env.local ./src/bin/index.ts",
    "fix": "run-p fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier -c .",
    "lint:spell": "cspell --gitignore --no-progress .",
    "lint:type": "tsc --noEmit",
    "prepare": "husky",
    "test": "run-s lint build"
  },
  "dependencies": {
    "@slack/socket-mode": "2.0.4",
    "@slack/web-api": "7.9.3",
    "chalk": "5.4.1",
    "cli-truncate": "4.0.0",
    "commander": "14.0.0",
    "emoji-datasource": "15.1.2",
    "slack-message-parser": "3.0.2",
    "terminal-link": "4.0.0",
    "ws": "8.18.3"
  },
  "devDependencies": {
    "@tsconfig/node20": "20.1.6",
    "@typescript-eslint/eslint-plugin": "8.37.0",
    "@typescript-eslint/parser": "8.37.0",
    "cspell": "9.2.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-packagejson": "2.5.19",
    "rimraf": "6.0.1",
    "tsx": "4.20.3",
    "typescript": "5.8.3"
  },
  "packageManager": "npm@11.4.2",
  "engines": {
    "node": ">= 20",
    "npm": ">= 9"
  }
}
